<html>
    <head>
        <title>Send Email</title>
        {{> imports path='../' }}
    </head>
    <body>
        <div id="page-container">
            <form method="POST" id="form" style="display:none" action="/dashboard/noticeboard">
                <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                <input type="hidden" name="team" value="{{team._id}}">
                <input type="hidden" name="player" value="{{user._id}}">
            </form>
            {{> navbar signedIn=true path='../' }}
            {{> sub-navbar }}
            <section class="defaultContainer" style="margin-top:150px" id="dash">
                <div class="container">
                    <div class="col-lg-12">
                        <center>
                            <h2>Send Team Email</h2>
                            <h5>{{msg}}</h5>
                            <center>
                    </div>
                    <div class="row text-center">
                        <div class="col-lg-12 text-center">
                            <form style="float: left" class="form-signin" action="/dashboard/email" method="POST">
                                <div class="form-group">
                                    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                                    <input class="form-control" style="width: 700px;" type="text" name="subject" id="vidCode" placeholder="Email Subject" value="" />
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" style="width: 1100px; height: 400px" id="vidCode" name="emailContent" rows="10" placeholder="Email Content"></textarea>
                                </div>
                                <div class="row text-center">
                                    <div style="float: right" class="formgroup">
                                        <button class="button" style=" margin-left: 20px" type="submit">Send <i class="fas fa-paper-plane"></i>
                                        </button>
                                        <br>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
            {{> footer }}
        </div>
    </body>
</html>