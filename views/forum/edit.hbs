<html>
    <head>
        <title>Edit Post</title>
        {{> imports path='../../' }}
    </head>
    <body>
        <div id="page-container">
            {{> navbar signedIn=true path='../../' }}
            <section class="defaultContainer" id="dash">
                <div class="container">
                    <div class="col-lg-12">
                        <center>
                            <h2>Edit Post</h2>
                            <center>
                    </div>
                    <div class="row text-center">
                        <div class="col-lg-12 text-center">
                            <form style="float: left" class="form-signin" method="POST">
                                <div class="form-group">
                                    <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                                    <input type="hidden" name="id" value="{{post._id}}" />
                                    <input class="form-control" style="width: 700px;" type="text" name="title" id="vidCode" placeholder="" value="{{post.title}}" />
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" style="width: 1100px; height: 400px" id="vidCode" name="content" rows="10" placeholder="">{{post.content}}</textarea>
                                </div>
                                <div class="row text-center">
                                    <div style="float: right" class="formgroup">
                                        <button class="button" style="width:150px; margin-left: 20px" type="submit">Save <i class="fas fa-save"></i>
                                        </button>
                                        <button class="button" style="width:150px;" type="button">
                                            <a style="color: white" href="/forum/post/{{post.slug}}">Cancel <i class="fas fa-times"></i>
                                            </a>
                                        </button>
                                        <br>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>
            {{> footer }}
        </div>
    </body>
</html>